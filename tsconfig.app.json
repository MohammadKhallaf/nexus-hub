{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "moduleDetection": "force",
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@schemas": [
        "src/app/schemas"
      ],
      "@types": [
        "src/app/types"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@styles/*": [
        "src/shared/styles/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@hooks": [
        "src/hooks"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}